.detail-container {
  display: flex;
  flex-direction: column;
}

.head-img {
  width: 100%;
  height: 460rpx;
}

.author-date {
  margin-top: 20rpx;
  margin-left: 30rpx;
  flex-direction: row;
}

.author-img {
  width: 64rpx;
  height: 64rpx;
  vertical-align: middle;
}

.author-name {
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  color: #666;
  vertical-align: middle;
}

.author-text {
  margin-left: 20rpx;
  font-size: 24rpx;
  color: #999;
}

.date {
  font-size: 24rpx;
  color: #999;
  margin-left: 30rpx;
  vertical-align: middle;
}

.title {
  font-size: 36rpx;
  font-weight: 700;
  margin-left: 40rpx;
  margin-top: 30rpx;
  color: #4b556c;
  letter-spacing: 2px;
}

.tool {
  margin-top: 20rpx;
}

.circle-img {
  float: right;
  margin-right: 40rpx;
  vertical-align: middle;
}

.circle-img image {
  width: 90rpx;
  height: 90rpx;
}

.share-img {
  margin-left: 30rpx;
}

.horizon {
  width: 600rpx;
  height: 1px;
  background-color: #e5e5e5;
  z-index: -11;
}

.detail-text {
  color: #666;
  margin: 20rpx 30rpx;
  letter-spacing: 2px;
  line-height: 44rpx;
}
