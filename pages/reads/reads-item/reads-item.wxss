.container-box {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  margin-left: 0rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5px;
}

.read-author-date {
  margin: 10rpx 0rpx 20rpx 10rpx;
}

.read-author {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}

.read-date {
  margin-left: 20rpx;
  vertical-align: middle;
}

.read-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #333;
  margin: 0 0 10px 10px;
}

.content-img {
  width: 100%;
  height: 340rpx;
  margin-bottom: 10px;
}

.content-text {
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}

.read-like {
  font-size: 13px;
  margin-left: 10px;
}

.read-like-img {
  width: 16px;
  height: 16px;
  margin-right: 10px;
  vertical-align: middle;
}

.read-like-text {
  margin-right: 20px;
  vertical-align: middle;
}
